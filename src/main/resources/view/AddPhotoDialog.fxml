<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.AddPhotoDialogController"
            prefHeight="400.0" prefWidth="300.0">

    <top>
        <VBox spacing="5.0">
            <children>
                <Button fx:id="uploadPhotoButton" mnemonicParsing="false" onAction="#handleUploadPhotoAction"
                        text="Wybierz zdjÄ™cie">
                </Button>

                <GridPane hgap="5.0" vgap="5.0">
                    <columnConstraints>
                        <ColumnConstraints />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>

                    <children>
                        <Label text="Nazwa">
                            <GridPane.margin>
                                <Insets left="5.0" right="5.0"/>
                            </GridPane.margin>
                        </Label>
                        <TextField fx:id="nameTextField" GridPane.columnIndex="1">
                            <GridPane.margin>
                                <Insets left="5.0" right="5.0"/>
                            </GridPane.margin>
                        </TextField>

                        <Label text="Data">
                            <GridPane.margin>
                                <Insets left="5.0" right="5.0" top="80.0"/>
                            </GridPane.margin>
                        </Label>
                        <DatePicker fx:id="datePicker" GridPane.columnIndex="1">
                            <GridPane.margin>
                                <Insets left="5.0" right="5.0" top="80.0"/>
                            </GridPane.margin>
                        </DatePicker>

                        <Label text="Opis">
                            <GridPane.margin>
                                <Insets left="5.0" right="5.0" top="230.0" />
                            </GridPane.margin>
                        </Label>
                        <TextArea fx:id="descriptionTextArea" GridPane.columnIndex="1" prefHeight="100" wrapText="true">
                            <GridPane.margin>
                                <Insets left="5.0" right="5.0" top="230.0" />
                            </GridPane.margin>
                        </TextArea>
                    </children>
                </GridPane>
            </children>
        </VBox>
    </top>


    <bottom>
        <HBox alignment="BOTTOM_RIGHT" spacing="5.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancelAction" prefWidth="100.0" text="Anuluj">
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </HBox.margin></Button>
                <Button fx:id="okButton" mnemonicParsing="false" onAction="#handleOkAction" prefWidth="100.0" text="Ok">
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </HBox.margin></Button>
            </children>
            <BorderPane.margin>
                <Insets left="5.0" right="5.0" top="5.0" />
            </BorderPane.margin>
        </HBox>
    </bottom>
    <opaqueInsets>
        <Insets />
    </opaqueInsets>

</BorderPane>