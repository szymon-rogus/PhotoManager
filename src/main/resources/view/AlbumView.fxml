<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.mainView.AlbumViewController"
            prefHeight="720.0" prefWidth="1280.0"
            style="-fx-background-color: lightBlue;">

    <center>
        <TableView BorderPane.alignment="CENTER" fx:id="albumsTable">
            <columns>
                <TableColumn prefWidth="${albumsTable.width/3}" text="Name" fx:id="nameColumn"/>
                <TableColumn prefWidth="${albumsTable.width/3}" text="Creation date" fx:id="creationDateColumn"/>
                <TableColumn prefWidth="${albumsTable.width/3}" text="Modification date" fx:id="modificationDateColumn"/>
            </columns>
        </TableView>
    </center>

    <right>
        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <opaqueInsets>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </opaqueInsets>
            <BorderPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </BorderPane.margin>
            <Button fx:id="createAlbumButton" alignment="TOP_CENTER" mnemonicParsing="false"
                    onAction="#handleCreateAlbumAction" text="Create new album">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
            </Button>
            <Button fx:id="deleteAlbumButton" alignment="TOP_CENTER" mnemonicParsing="false"
                    onAction="#handleDeleteAlbumAction" text="Remove album">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
            </Button>
            <Button fx:id="allPhotoViewButton" alignment="TOP_CENTER" mnemonicParsing="false"
                    onAction="#handleAllPhotoViewAction" text="Show all photos">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
            </Button>
            <Button fx:id="changeEmailButton" alignment="TOP_CENTER" mnemonicParsing="false"
                    onAction="#handleChangeEmail" text="Changes email">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
            </Button>
            <Button fx:id="logoutButton" alignment="TOP_CENTER" mnemonicParsing="false"
                    onAction="#handleLogout" text="Log out">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
            </Button>
        </VBox>
    </right>

</BorderPane>
